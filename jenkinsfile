pipeline {
    agent any

    environment {
        def dockerUser = "aadhitya369"
        IMAGE_NAME = "myapp"
        IMAGE_TAG = "latest"
    }

    stages {
        stage('Clone Repo') {
            steps {
                checkout scm
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    sh "docker build -t ${dockerUser}/${imageName}:${tag} ."
                }
            }
        }

        stage('Push to Docker Desktop') {
            steps {
                script {
                    sh "docker tag ${IMAGE_NAME}:${IMAGE_TAG} docker.io/library/${IMAGE_NAME}:${IMAGE_TAG}"
                    sh "docker push docker.io/library/${IMAGE_NAME}:${IMAGE_TAG}"
                }
            }
        }
    }

    post {
        success {
            echo " Build and push successful!"
        }
        failure {
            echo " Build or push failed."
        }
    }
}
