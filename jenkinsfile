pipeline {
    agent any

    environment {
        IMAGE_NAME = "rep"
        TAG = "latest"
    }

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/AADHITYA369/rep.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    sh "docker build -t ${IMAGE_NAME}:${TAG} ."
                }
            }
        }

        stage('Verify Docker Image') {
            steps {
                script {
                    sh "docker images | grep ${IMAGE_NAME}"
                }
            }
        }
    }
}
