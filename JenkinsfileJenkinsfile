pipeline {
    agent any

    environment {
        IMAGE_NAME = "fast-api"
    }

    triggers {
        pollSCM('* * * * *')  // Polls every minute for changes in the repo
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'repo', url: 'https://github.com/AADHITYA369/rep.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh "docker build -t ${IMAGE_NAME} ."
            }
        }
    }
}
